                                    {
                                      
                                        <div class="btn btn-curtain-light mar-bot-50 wow animated fadeInUp" data-wow-delay="2800ms">
                                            <a href="@Url.Action("Landing", "Home")" class="btn btn-lg letter-spacing-3">Proceed</a>
                                        </div>
                                    }

